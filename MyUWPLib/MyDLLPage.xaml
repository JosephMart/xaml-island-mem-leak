<Page
    x:Class="MyUWPLib.MyDLLPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyUWPLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" Spacing="10" Padding="20" Width="692">

        <TextBlock Text="Native DLL on the Island" Style="{StaticResource TitleTextBlockStyle}" FontSize="35" HorizontalAlignment="Center" />

        <TextBlock Text="Fibonacci" Style="{StaticResource SubtitleTextBlockStyle}" />
        <TextBox Name="nInput" Header="N" Text="0"/>
        <TextBox Name="result" Header="Result" Text="0"/>

        <Button Content="Evaluate" Click="Button_Evaluate" />
    </StackPanel>
</Page>
